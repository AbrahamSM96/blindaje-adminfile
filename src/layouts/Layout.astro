---
import { ViewTransitions } from 'astro:transitions'
import Header from '../components/Header.astro'
import Banner from '../components/Banner.astro'
import Footer from '../components/Footer.astro'
import '@fontsource/montserrat'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <meta charset="UTF-8" />
  <meta name="description" content="Astro description" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <script>
    if (
      localStorage.theme === 'dark' ||
      (!('theme' in localStorage) &&
        window.matchMedia('(prefers-color-scheme: dark)').matches)
    ) {
      document.documentElement.classList.add('dark')
      // We set the inner HTML when the user prefers dark mode to remove any FOUC when the SVG changes from its default light mode svg
      const darkModeButton = document.querySelector(
        '.dark-mode-button'
      ) as HTMLButtonElement
      darkModeButton.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
      <path
        d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z"
      />
    </svg>
        `
    } else {
      document.documentElement.classList.remove('dark')
    }
  </script>
  <title>{title}</title>
  <ViewTransitions />

  <body class="min-h-screen pb-32">
    <Banner />
    <Header />

    <main class="max-w-8xl px-6 m-auto">
      <!-- <div id="app" class="relative h-screen p-2 gap-2"></div> -->
      <slot />
    </main>
    <style is:global>
      html {
        --color-rose-700: hsl(345, 83%, 41%);
        --color-violet-200: #313131;
        --color-slate-900: hsl(222, 47%, 11%);

        --color-primary: var(--color-rose-700);
        --color-background: var(--color-violet-200);
        --color-neutral: var(--color-slate-900);
        font-family: 'Montserrat', system-ui, sans-serif;
        color-scheme: dark light;
        /* background-color: #313131; */
        color: var(--color-neutral);
        background-color: var(--color-background);
      }
    </style>
  </body>
</html>

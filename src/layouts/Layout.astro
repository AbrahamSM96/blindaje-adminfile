---
import { ViewTransitions } from 'astro:transitions'
import Banner from '../components/Banner.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

import '@fontsource/montserrat'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <title>{title}</title>

    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="creator" content="Abraham SM" />
    <script is:inline>
      window.getThemePreference = () => {
        const localItem =
          typeof localStorage !== 'undefined' && localStorage.getItem('theme')
        if (localItem) return localItem
        return window.matchMedia('(prefers-color-scheme: dark)').matches
          ? 'dark'
          : 'light'
      }

      const isDark = window.getThemePreference() === 'dark'
      document.documentElement.classList.toggle('dark', isDark)
    </script>
  </head>

  <ViewTransitions />

  <body
    class="min-h-screen [&_:focus-visible]:outline-none [&_:focus-visible]:ring-2 [&_:focus-visible]:ring-primary"
  >
    <Banner />
    <Header />

    <main class="max-w-8xl px-14 m-auto">
      <!-- <div id="app" class="relative h-screen p-2 gap-2"></div> -->
      <slot />
    </main>
    <Footer />
  </body>

  <style is:global>
    :root {
      --color-rose-700: hsl(345, 83%, 41%);
      --color-violet-200: #313131;
      --color-slate-900: hsl(222, 47%, 11%);
      --color-secondary: #ddd;

      --color-primary: var(--color-rose-700);
      --color-background: var(--color-violet-200);
      --color-neutral: var(--color-slate-900);

      --background-color: var(--color-secondary);
    }
    .dark {
      --color-primary: #ddd;
      --color-secondary: #333;
      --color-neutral: #ddd;
      --background-color: var(--color-secondary);
    }
    html {
      font-family: 'Montserrat', system-ui, sans-serif;
      /* background-color: #313131; */
      color: var(--color-neutral);

      background-color: var(--background-color);
    }

    /* Hiding class, making content visible only to screen readers but not visually */
    /* "sr" meaning "screen-reader" */
    .sr-only:not(:focus):not(:active) {
      clip: rect(0 0 0 0);
      clip-path: inset(50%);
      height: 1px;
      overflow: hidden;
      position: absolute;
      white-space: nowrap;
      width: 1px;
    }

    ::-webkit-scrollbar {
      width: 10px;
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb {
      border-radius: 10px;
      background-color: theme('colors.white');
      border: 2px solid transparent;
      background-clip: content-box;
    }

    ::-webkit-scrollbar-track {
      background: var(--background-image);
    }

    ::-webkit-scrollbar-corner {
      background: var(--background-image);
    }
  </style>
</html>
